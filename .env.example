# ==========================================
# Agentic AI Platform - Environment Variables
# ==========================================

# ==========================================
# Azure OpenAI Configuration
# ==========================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# ==========================================
# Database Configuration (PostgreSQL)
# ==========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentic_ai
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password_here

# Database URL (auto-generated, no need to modify)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# Qdrant (Vector DB) Configuration
# ==========================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_PREFIX=agentic_ai

# ==========================================
# ServiceNow Configuration
# ==========================================
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=your-password-here
SERVICENOW_API_VERSION=v1

# ==========================================
# OneDrive Configuration (Microsoft Graph API)
# ==========================================
ONEDRIVE_CLIENT_ID=your-client-id
ONEDRIVE_CLIENT_SECRET=your-client-secret
ONEDRIVE_TENANT_ID=your-tenant-id
ONEDRIVE_REDIRECT_URI=http://localhost:8080/auth/callback

# ==========================================
# Cloud Provider Configuration
# ==========================================
# Azure
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# AWS (if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ==========================================
# Monitoring Configuration
# ==========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ==========================================
# Application Configuration
# ==========================================
APP_NAME=Agentic AI Platform
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
API_PORT=8080
API_HOST=0.0.0.0

# ==========================================
# Security Configuration
# ==========================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# MCP Server Configuration
# ==========================================
MCP_DATABASE_SERVER_URL=http://localhost:5000
MCP_SERVICENOW_SERVER_URL=http://localhost:5001
MCP_CLOUD_SERVER_URL=http://localhost:5002

# ==========================================
# Agent Configuration
# ==========================================
# LLM Settings
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2000
DEFAULT_MODEL=gpt-4

# RAG Settings
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.7

# Task Settings
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=1800  # 30 minutes

# ==========================================
# Notification Configuration
# ==========================================
# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@agentic-ai.com

# Slack
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# ==========================================
# Testing Configuration
# ==========================================
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/test_agentic_ai
TEST_MODE=false

# ==========================================
# Feature Flags
# ==========================================
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_AUTH=false  # Set to true in production

# ==========================================
# Performance Configuration
# ==========================================
# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true

# ==========================================
# Development Tools
# ==========================================
DEBUG=false
RELOAD=false  # Auto-reload for development
